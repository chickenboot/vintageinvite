  def nav_li(s)
    if item.identifier == "/#{s}/"
      haml_tag('li', s.capitalize, :class => 'active')
    else
      haml_tag('li') do
        haml_tag('a', s.capitalize, :href => "/#{s}/")
      end
    end
  end

