  def nav_li(s, title=nil, href=nil)
    href ||= "/#{s}/"
    if item.identifier == "/#{s}/"
      haml_tag('li', title || s.capitalize, :class => 'active')
    else
      haml_tag('li') do
        haml_tag('a', title || s.capitalize, :href => href)
      end
    end
  end

