  def nav_li(s, title=nil, href=nil)
    href ||= "/#{s}/"
    if item.identifier == href
      haml_tag('li', title || s.upcase, :class => 'active header')
    else
      haml_tag('li') do
        haml_tag('a', title || s.upcase, :href => href, :class => 'header')
      end
    end
  end

