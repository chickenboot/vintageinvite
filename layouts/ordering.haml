  def category(s, title=nil, href=nil)
    href ||= "/#{s}/"
    if item.identifier == href
      haml_tag('li', "â†’ #{title || s.upcase}", :class => 'active')
    else
      haml_tag('li') do
        haml_tag('a', title || s.upcase, :href => href, :class => 'notactive')
      end
    end
  end

