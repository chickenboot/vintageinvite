= render 'default', :orbit => 'product-orbit' do
  .product
    .row
      .six.columns
        .product-large
          #product-orbit
            %img{:src => "/assets/products/#{item[:image_root]}-invite.jpg", :data => { :caption => '#caption-invite'}}
            %img{:src => "/assets/products/#{item[:image_root]}-rsvp.jpg", :data => { :caption => '#caption-rsvp'}}
            %img{:src => "/assets/products/#{item[:image_root]}-place.jpg", :data => { :caption => '#caption-place'}}
            %img{:src => "/assets/products/#{item[:image_root]}-std.jpg", :data => { :caption => '#caption-std'}}
          %span.orbit-caption#caption-invite
            %p Main Invitation &ndash; A5 on 428gsm cotton stock
          %span.orbit-caption#caption-rsvp
            %p RSVP &ndash; 147mm x 147mm on 250gsm woven stock
          %span.orbit-caption#caption-place
            %p Place Cards &ndash; a bit smaller, on 250gsm woven stock
          %span.orbit-caption#caption-std
            %p Save the Date &ndash; 147mm x 147mm on 250gsm woven stock
      .six.columns
        %h6= item[:product_title]
        .sub.italic= item[:product_blurb]
        .paddy &nbsp;
        = yield
  .productrange
    .row
      .three.columns.mobile-two
        %img{:src => "/assets/products/#{item[:image_root]}-std-220.jpg"}
        %h6.text-center SAVE THE DATE
      .three.columns.mobile-two
        %img{:src => "/assets/products/#{item[:image_root]}-invite-220.jpg"}
        %h6.text-center MAIN INVITATION
      .three.columns.mobile-two
        %img{:src => "/assets/products/#{item[:image_root]}-rsvp-220.jpg"}
        %h6.text-center RSVP
      .three.columns.mobile-two
        %img{:src => "/assets/products/#{item[:image_root]}-place-220.jpg"}
        %h6.text-center PLACE SETTINGS
  .row
    .twelve.columns
      .pinkinggrey &nbsp;
      .greyblock &nbsp;

