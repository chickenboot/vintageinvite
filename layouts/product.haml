- main_index = item[:images].length > 1 ? 1 : 0
- class_suffix = item[:in_development] ? "-development" : ""
= render 'default' do
  .product
    .row
      .six.columns
        .product-large
          %img.zoomy#main-image{:src => "/assets/products/#{item[:images].to_a[main_index][0]}-medium.jpg", :data => {:zoom_image => "/assets/products/#{item[:images].to_a[main_index][0]}-large.jpg"}}
      .six.columns
        %div{:class => "product-title#{class_suffix}"}
          %h6= item[:product_title]
          .sub.italic= item[:product_blurb]
        = yield
        .panel 
          %h6
            Ready to order?
            %a{href: "mailto:hello@thevintageinvite.com?subject=Wedding Stationery - #{item[:product_title]}"} Send us an enquiry
            or see <a href='/order'>how to order</a>.
  .productrange
    - item[:images].each_slice(4) do |fours|
      .row
        - fours.each do |k,v|
          .three.columns.mobile-two
            %a{:href => '#', :data => {:set_image => 'main-image', :set_image_src => "/assets/products/#{k}-medium.jpg"}}
              %img{:src => "/assets/products/#{k}-220.jpg"}
            %h6.text-center= v
        - (4 - fours.length).times.each do |i|
          .three.columns.mobile-two &nbsp;
  .row
    .twelve.columns
      .pinking-darkgrey &nbsp;
      .darkgrey-header
        %h6 HOW TO ORDER
      .greyblock
        .row
          .three.columns.mobile-two
            %h6 STEP 1: SELECT
            %p Find the design that fits your wedding! If you are undecided, don't forget you can <a href='mailto:hello@thevintageinvite.com?subject=Sample Pack Request'>request a sample pack</a>: be sure to let us know which designs you like.
          .three.columns.mobile-two
            %h6 STEP 2: ORDER
            %p <a href='/contact'>Get in touch</a>! Let us know all the details (a checklist can be found on our detailed <a href='/order'>order</a> page) and any extras you need, and we'll prepare you an invoice.
          .three.columns.mobile-two
            %h6 STEP 3: PROOF
            %p Within three working days of receiving your deposit, we will send a digital representation (proof) of your customised design for you to sign off.
          .three.columns.mobile-two
            %h6 STEP 4: RECEIVE
            %p Unless otherwise notified, you should receive your stationery (by signed-for courier) within ten working days! 